@using BulkyBook.Models
@model Category
<form method= "post">
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class = "text-primary"> Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>
         <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <button type="submit" class="btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn-secondary" style="width:150px">Back To List </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}